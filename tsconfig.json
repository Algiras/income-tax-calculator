{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018", "dom"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "./lib/**/*.ts",
    "./tests/**/*.ts",
    "./client/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
